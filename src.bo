const copy_with_predicate.(A, B, T) = fn(input: &[A] typeof T, output: &[B] typeof T, pred: fn(&typeof T, &typeof T) -> bool) {
    let output_ptr = cast &output : &typeof T;

    let i = 0;
    for cast input : &typeof T {
        if i >= B  break;

        if pred(_it, output_ptr + i) {
            *(output_ptr + i) = *_it;
        };
    };
};

