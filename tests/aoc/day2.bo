library "base.bo";
import "../main.bo";
import "day2_input.bo";

const TestsDay2 = fn() {
    defer ok("AOC day 2");
    assert(aoc_day2_part_1(INPUT) == 1962940);
    assert(aoc_day2_part_2(INPUT) == 1813664422);
};

const aoc_day2_part_1 = fn (parse: [] u8) -> i64 {
    let depth = 0;
    let pos   = 0;

    take_whitespace(&parse);
    while not(empty(&parse)) {
        let command = take_word(&parse);
        take_whitespace(&parse);
        let number = take_u64(&parse);
        take_whitespace(&parse);

        if cmp_strings(command, "forward") {
            pos = pos + cast number;
        } else if cmp_strings(command, "down") {
            depth = depth + cast number;
        } else if cmp_strings(command, "up") {
            depth = depth - cast number;
        } else {
            // Invalid command!
            assert(false);
        };
    };

    depth * pos
};

const aoc_day2_part_2 = fn(parse: [] u8) -> i64 {
    let parse = INPUT;

    let depth = 0;
    let pos = 0;
    let aim = 0;

    take_whitespace(&parse);
    while not(empty(&parse)) {
        let command = take_word(&parse);
        take_whitespace(&parse);
        let number = take_u64(&parse);
        take_whitespace(&parse);

        if cmp_strings(command, "forward") {
            pos = pos + cast number;
            depth = depth + aim * cast number;
        } else if cmp_strings(command, "down") {
            aim = aim + cast number;
        } else if cmp_strings(command, "up") {
            aim = aim - cast number;
        } else {
            // Invalid command!
            assert(false);
        };
    };

    depth * pos
};
